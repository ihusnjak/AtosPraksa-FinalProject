<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/margin_menu_medium">

    <TextView
        android:id="@+id/tv_labelPlayer1"
        android:layout_width="150dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Player 1:"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/tv_labelPlayer2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_labelPlayer1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Player 2:"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/tv_labelWinner"
        android:layout_width="150dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_labelPlayer2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Winner:"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/tv_player1Name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_labelPlayer1"
        app:layout_constraintRight_toRightOf="parent"
        android:text="test"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/tv_player2Name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_player1Name"
        app:layout_constraintLeft_toRightOf="@id/tv_labelPlayer2"
        app:layout_constraintRight_toRightOf="parent"
        android:text="test"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/tv_Winner"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_player2Name"
        app:layout_constraintLeft_toRightOf="@id/tv_labelWinner"
        app:layout_constraintRight_toRightOf="parent"
        android:text="test"
        android:textSize="25sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/margin_small"
    android:layout_marginLeft="@dimen/margin_extra_small"
    android:layout_marginRight="@dimen/margin_extra_small"
    android:background="@color/background_match_item"
    android:paddingLeft="@dimen/padding_small"
    android:paddingRight="@dimen/padding_small"
    android:paddingTop="@dimen/padding_extra_small"
    android:paddingBottom="@dimen/padding_extra_small">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_split"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35" />

    <View
        android:id="@+id/horizontal_separator_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_line_height"
        app:layout_constraintTop_toBottomOf="@id/tv_labelPlayer1"
        app:layout_constraintBottom_toTopOf="@id/tv_labelPlayer2"
        android:background="@color/separator_line"/>

    <View
        android:id="@+id/horizontal_separator_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_line_height"
        app:layout_constraintTop_toBottomOf="@id/tv_labelPlayer2"
        app:layout_constraintBottom_toTopOf="@id/tv_labelWinner"
        android:background="@color/separator_line"/>

    <TextView
        android:id="@+id/tv_labelPlayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@id/guide_split"
        android:text="Player 1:"
        android:textSize="25sp"
        android:textColor="@color/label"
        android:paddingBottom="@dimen/padding_extra_small"
        android:paddingTop="@dimen/padding_extra_small"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_labelPlayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_labelPlayer1"
        app:layout_constraintRight_toRightOf="@id/guide_split"
        android:text="Player 2:"
        android:textSize="25sp"
        android:textColor="@color/label"
        android:paddingBottom="@dimen/padding_extra_small"
        android:paddingTop="@dimen/padding_extra_small"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_labelWinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_labelPlayer2"
        app:layout_constraintRight_toRightOf="@id/guide_split"
        android:text="Winner:"
        android:textSize="25sp"
        android:textColor="@color/label"
        android:paddingBottom="@dimen/padding_extra_small"
        android:paddingTop="@dimen/padding_extra_small"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_player1Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/guide_split"
        app:layout_constraintRight_toRightOf="parent"
        android:text="test"
        android:textSize="25sp"
        android:textColor="@color/label"
        android:paddingBottom="@dimen/padding_extra_small"
        android:paddingTop="@dimen/padding_extra_small"/>

    <TextView
        android:id="@+id/tv_player2Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_player1Name"
        app:layout_constraintLeft_toRightOf="@id/guide_split"
        app:layout_constraintRight_toRightOf="parent"
        android:text="test"
        android:textSize="25sp"
        android:textColor="@color/label"
        android:paddingBottom="@dimen/padding_extra_small"
        android:paddingTop="@dimen/padding_extra_small"/>

    <TextView
        android:id="@+id/tv_Winner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_player2Name"
        app:layout_constraintLeft_toRightOf="@id/guide_split"
        app:layout_constraintRight_toRightOf="parent"
        android:text="test"
        android:textSize="25sp"
        android:textColor="@color/label"
        android:paddingBottom="@dimen/padding_extra_small"
        android:paddingTop="@dimen/padding_extra_small"/>

</androidx.constraintlayout.widget.ConstraintLayout>